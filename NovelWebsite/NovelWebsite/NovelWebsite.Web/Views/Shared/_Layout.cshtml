@inject IHttpContextAccessor httpContextAccessor;


<!DOCTYPE html>
<html lang="en">
<head>
    <title>Test</title> 
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="~/css/index.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css">
    <script type="text/javascript" src="~/js/scrollbutton.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script type="text/javascript" src="~/js/changbtn.js"></script>
    @*  <script type="text/javascript" src="~/tinymce/js/tinymce/tinymce.min.js"></script>
    <script type="text/javascript" src="~/js/tinymcescript.js"></script>*@
    <script type="text/javascript" src="~/ckeditor5-build-decoupled-document/ckeditor.js"></script>
    @*<script type="text/javascript" src="~/ckeditor5-build-decoupled-document/ckeditor.js.map" defer></script>*@
    <script type="text/javascript" src="~/ckeditor5-build-decoupled-document/translations/vi.js"></script>
</head>
<body>
    <button onclick="topFunction()" class="myBtn" title="Go to top"><i class="fa-solid fa-arrow-up"></i></button>
    <header>
        <div class="header__main">
            <div class="header__box--center row">
                <div class="mobile">
                    <label for="nav-mobile-input" class="nav__bars-btn">
                        <svg class="bar" xmlns="http://www.w3.org/2000/svg"
                             viewBox="0 0 448 512">
                            <path d="M0 96C0 78.3 14.3 64 32 64H416c17.7 0 32 14.3 32 32s-14.3 32-32 32H32C14.3 128 0 113.7 0 96zM0 256c0-17.7 14.3-32 32-32H416c17.7 0 32 14.3 32 32s-14.3 32-32 32H32c-17.7 0-32-14.3-32-32zM448 416c0 17.7-14.3 32-32 32H32c-17.7 0-32-14.3-32-32s14.3-32 32-32H416c17.7 0 32 14.3 32 32z" />
                        </svg>
                    </label>

                    <input type="checkbox" class="nav__input" id="nav-mobile-input">
                    <lable for="nav-mobile-input" class="nav__overlay"></lable>
                    <div class="navbar_mobile navbar-expand-md">
                        <div class="navbarmobile__main">
                            <ul class="nav_mobile navbar-nav">

                                <li class="nav_mobile-item navlist">
                                    <a class="nav_mobile-link navlist--item" href="javascript:void(0)">Diễn đàn</a>
                                </li>
                                <li class="nav_mobile-item navlist">
                                    <a class="nav_mobile-link navlist--item" href="/bang-xep-hang">
                                        Bảng xếp
                                        hạng
                                    </a>
                                </li>
                                <li class="nav_mobile-item navlist">
                                    <a class="nav_mobile-link navlist--item" href="/bo-loc">Bộ lọc</a>
                                </li>
                                <li class="nav_mobile-item navlist">
                                    <a class="nav_mobile-link navlist--item" href="/review">Reviews</a>
                                </li>
                                <li class="nav_mobile-item navlist">
                                    <a class="nav_mobile-link navlist--item" id="tin" href="/tin-tuc">Tin tức</a>
                                </li>
                            </ul>

                        </div>
                    </div>
                </div>
                <div class="col logo col-md-2">
                    <a href="/" data-eid="qd_A11">
                    </a>
                </div>

                <div class="col search input-group col-md-4">
                    <form method="get" action="/bo-loc/">
                        <input type="text" class="form-control shadow-none" name="searchName" placeholder="Nhập tên truyện">
                        <button class="btn btn-success btn--search-color" type="submit" title="searchButton">
                            <i class="fa-solid fa-magnifying-glass search__btn--icons"></i>
                        </button>
                    </form>
                </div>


                <div class="dropdown col-md-2 category-dropdown">
                    <button type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown">
                        Thể loại
                    </button>
                    <div class="dropdown-menu mutli-column">
                        <div class="row" id="chapter-category">
                            <ul class="col-md-4">
                                <li><a href="javascript:void(0)">Tiên hiệp</a></li>
                                <li><a href="javascript:void(0)">Huyền huyễn</a></li>
                                <li><a href="javascript:void(0)">Đô thị</a></li>
                                <li><a href="javascript:void(0)">Khoa huyễn</a></li>
                                <li><a href="javascript:void(0)">Kỳ huyễn</a></li>
                            </ul>
                            <ul class="col-md-4">
                                <li><a href="javascript:void(0)">Lịch sử</a></li>
                                <li><a href="javascript:void(0)">Đồng nhân</a></li>
                                <li><a href="javascript:void(0)">Quân sự</a></li>
                                <li><a href="javascript:void(0)">Võ hiệp</a></li>
                            </ul>
                            <ul class="col-md-4">
                                <li><a href="javascript:void(0)">Cạnh ký</a></li>
                                <li><a href="javascript:void(0)">Linh dị</a></li>
                                <li><a href="javascript:void(0)">Ngôn tình</a></li>
                                <li><a href="javascript:void(0)">Du hí</a></li>
                            </ul>
                        </div>
                    </div>
                </div>


                @if (httpContextAccessor.HttpContext.User.Identity.IsAuthenticated)
                {
                    @await Component.InvokeAsync("UserNavbar")
                }
                else
                {
                    @await Html.PartialAsync("LoginRegister")
                }

            </div>

            <div class="navbar navbar-expand-md">
                <div class="navbar__main">
                    <ul class="nav navbar-nav">
                        <li class="nav-item--trangchu">
                            <a href="/">
                                <span>
                                    <i class="fa-solid fa-list"></i>
                                    Trang chủ
                                </span>
                            </a>
                        </li>
                        <li class="nav-item navlist">
                            <a class="nav-link navlist--item" href="/bang-xep-hang">Bảng xếp hạng</a>
                        </li>
                        <li class="nav-item navlist">
                            <a class="nav-link navlist--item" href="/bo-loc">Bộ lọc</a>
                        </li>
                        <li class="nav-item navlist">
                            <a class="nav-link navlist--item" href="/review">Reviews</a>
                        </li>
                        <li class="nav-item navlist">
                            <a class="nav-link navlist--item" href="/tin-tuc">Tin tức</a>
                        </li>
                    </ul>

                </div>
            </div>
        </div>
    </header>

    @RenderBody()

    <footer>
        <div class="footer--container">
            <div class="row footer--inside-container">
                <div class="col-md-3">
                    <img src="~/image/Illustration4.png" height="60" width="100%" alt="logoweb">
                </div>
                <div class="col-md-9 footer--text">
                    <i class="fa-regular fa-copyright"></i>
                    Đây là sản phẩm giả tưởng
                    Không có giá trị thương mại
                    <a href="javascript:void(0)">Điều khoản sử dụng</a>
                    <br>
                    Đây là sân chơi mở và free cho cộng đồng fan kiếm hiệp, tiên hiệp, ngôn tình.
                    Chúc các bạn có những giây phút thư giãn thoải mái sau giờ làm việc và học tập căng thẳng.
                </div>
            </div>
        </div>
    </footer>
   @*  <script type="text/javascript" src="~/content/layout.js"></script> *@
   @* <script type="text/javascript" src="~/content/login.js"></script>*@
   <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

